{
  "compilerOptions": {
    "target": "ES2020", // Or a newer ECMAScript version if needed
    "module": "NodeNext",
    "moduleResolution" : "NodeNext",
    "strict": true, // Enable strict type checking
    "esModuleInterop": true, // Allows for easier importing of CommonJS modules
    "skipLibCheck": true, // Skip type checking of declaration files
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist", // Output directory (even if we don't use it for direct execution)
    "rootDir": "src", // Specify the root directory of your source files
    "resolveJsonModule": true, // allow importing json files
    "noEmit": true, // important: since we use ts-node, we don't want typescript to create javascript files
    "allowImportingTsExtensions": true
  },
  "include": ["src/**/*"], // Include all files in the src directory
  "exclude": ["node_modules"] // Exclude the node_modules directory
}
